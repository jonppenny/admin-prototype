{
  "extends": "standard",
  "plugins": [
    "standard",
    "promise"
  ],
  "rules": {
    "indent": ["error", 2],
    "semi": [2, "always"],
    "space-before-function-paren": [0, "always"],
    "no-multi-spaces": "off",
    "key-spacing": "off",
    "spaced-comment": "off"
  },
  "globals": {
    "jQuery": true
  }
}